package sessionsBeans;

import java.util.List;

import javax.ejb.Remote;

import entity.Account;
import entity.Card;

@Remote
public interface CardsRemote {
	/**
	 * Add a card to an existing account
	 * 
	 * @param c
	 * @throws Exception
	 */
	public void add(Card c);

	/**
	 * Check that card number exists in database
	 * 
	 * @return
	 */
	public boolean validateCardNumber(String cardNumber);

	/**
	 * Check that card PIN code is correct
	 * 
	 * @param cardNumber
	 * @param pin
	 * @return
	 */
	public boolean validatePin(String cardNumber, String pin);

	/**
	 * Returns accountId belonging to the card 
	 * @param cardNumber
	 * @return
	 */
	public int getAccountId(String cardNumber);

	/**
	 * Lists all cards in db. Only used for testing
	 * 
	 * @return
	 * @throws Exception
	 */
	public List<Card> list();

	/**
	 * Removes an existing card. Only used for testing
	 * 
	 * @param c
	 */
	public void remove(Card c);
}
